---
import { Image } from 'astro:assets'
import tracat from '../assets/tracat.png'
import { css, cx } from '../../styled-system/css'
interface Props {
  width: string
  height: string
}

const { width, height } = Astro.props
---

<div transition:name="trasta-icon">
  <label>
    <input
      type="checkbox"
      class={cx(css({ display: 'none' }), 'rotation-toggle')}
    />
    <div
      class={cx(
        css({
          w: width,
          h: height,
          borderRadius: '50%',
          overflow: 'hidden',
          border: '4px solid black',
          animation: 'spin 2s forwards paused infinite linear',
          '&:hover': {
            animationPlayState: 'running',
            cursor: 'pointer',
          },
        }),
        'tracat-wrapper'
      )}
    >
      <Image
        src={tracat}
        alt="trasta"
        class={cx(
          css({
            animation: 'spin 4s forwards paused infinite linear reverse',
            '&:hover': {
              animationPlayState: 'running',
            },
          }),
          'tracat-img'
        )}
      />
    </div>
  </label>
</div>

<style>
  .rotation-toggle:checked ~ .tracat-wrapper {
    animation-play-state: paused;
  }
</style>
