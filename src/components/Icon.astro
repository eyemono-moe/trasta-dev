---
import { css, cx } from '../../styled-system/css'
interface Props {
  width: string
  height: string
}

const { width, height } = Astro.props
---

<div
  class={css({
    w: width,
    h: height,
  })}
  transition:name="trasta-icon"
>
  <label>
    <input
      type="checkbox"
      class={cx(css({ display: 'none' }), 'rotation-toggle')}
    />
    <div
      class={cx(
        css({
          w: '100%',
          h: '100%',
          borderRadius: '50%',
          overflow: 'hidden',
          border: '4px solid black',
          animation: 'spin 2s forwards paused infinite linear',
          '&:hover': {
            animationPlayState: 'running',
            cursor: 'pointer',
          },
        }),
        'tracat-wrapper'
      )}
    >
      <img
        src="tracat.png"
        alt="trasta"
        class={cx(
          css({
            animation: 'spin 4s forwards paused infinite linear reverse',
            '&:hover': {
              animationPlayState: 'running',
            },
          }),
          'tracat-img'
        )}
      />
    </div>
  </label>
</div>

<style>
  .rotation-toggle:checked ~ .tracat-wrapper {
    animation-play-state: paused;
  }
  .rotation-toggle:checked ~ .tracat-img {
    animation-play-state: running;
  }
</style>
